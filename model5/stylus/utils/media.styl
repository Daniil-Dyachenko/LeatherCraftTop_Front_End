@media (max-width: 450px)
  .header
    flex-direction column
    align-items center
    margin-top 20px

  .header-img
    width 270px
    height 320px

    img
      object-fit cover
      width 100%
      height 100%
      border-radius 10px

  .header-slogan
    max-width 300px

  .leather-list
    grid-template-columns 1fr
    gap 30px

  .leather-item
    grid-template-columns 1fr
    width 300px

  .leather-img
    width 100%
    height 200px

  .leather-title
    margin-top 10px
    font-size 20px

  .sale-form
    flex-direction column
    align-items center
    width 300px

  .sale-input
    width 100%

  .container
    padding-inline 20px

  .footer
    width 100%
    border-top 1px solid #000
    margin-top 20px

  .footer-list
    padding-bottom 10px