.sale-form
  display flex
  align-items center
  gap 10px

.sale-input
  text-align center
  color black
  border 1px solid saddlebrown
  padding 15px
  width 400px
  font-size 20px
  border-radius 5px

.sale-button
  background-color saddlebrown
  border none
  cursor pointer
  transition opacity 0.3s ease-in-out
  padding 15px 30px
  font-size 16px
  border-radius 5px
  color white

  &:hover
    opacity 0.7